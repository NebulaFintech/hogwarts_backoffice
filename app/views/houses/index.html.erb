<h1>Houses</h1>

<table>
  <tr>
    <th>House</th>
    <th>Actions</th>
  </tr>
  <% @houses.each do |house| %>
    <tr>
      <td><%= house.name %></td>
      <td>
        <% if current_wizard.student? %>
          <%= link_to 'apply', apply_house_path(house) %>
        <% end %>    
      </td>
    </tr>
  <% end %>
</table>
